<table class="table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Created</th>
    <th><%= ENV["CLASS_TERM_PLURAL"] %></th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% unless documents.nil? || documents.empty? %>
    <% documents.each do |document| %>
      <tr>
        <td>
          <%= link_to document.title, document_path(document.friendly_id) %></td>
        <td>
          <%= document.author %></td>
        <td>
          <%= document.created_at.strftime("%m/%d/%Y") %></td>
        <td>
          <% document.rep_group_list.each do |group| %>
          <span class="label label-info">
            <%= group %></span>
          <% end %></td>
        <td>
          <% if document.draft? %>
          <i class="glyphicon glyphicon-pencil"></i>
          <% elsif document.published? %>
          <i class="glyphicon glyphicon-book"></i>
          <% elsif document.annotatable? %>
          <i class="glyphicon glyphicon-comment"></i>
          <% elsif document.archived? %>
          <i class="glyphicon glyphicon-folder-close"></i>
          <% end %></td>
        <td class="button-column">
          <% if can? :update, document %>
          <%= link_to 'Edit', edit_document_path(document), :class =>
          'btn btn-default btn-sm' %>
          <% end %>
          <% if can? :publish, document %>
          <%= link_to 'Publish', document_publish_path(document), method: :post, :class =>
          'btn btn-default btn-sm' %>
          <% end %>
          <% if can? :archive, document %>
          <%= link_to 'Archive', document_archive_path(document), method: :post, :class => 
          'btn btn-default btn-sm' %>
          <% end %></td>
      </tr>
    <% end %>
  <% else %>
  <tr>
    <td colspan="6">No documents to view.</td>
  </tr>
  <% end %></table>
